#!/bin/sh

# File:     aliases
# Created:  30.12.2019
# Author:   Artyom Danilov


alias sudo='sudo ' # Run 'sudo {alias}'

alias e='exa'
alias f='file'
alias g='git'
alias h='history'
alias j='java'
alias l='ls'
alias s='source'
alias t='tree'
alias v='vim'

alias cl='clear'
alias gh='history | grep'
alias jc='javac'
alias me='curl https://ipinfo.io/ip'
alias nv='nvim'
alias py='python3'
alias sc='shellcheck'
alias tc='touch'
alias vi='vim'

alias ipy='ipython'
alias shu='shunit2'
alias ghs='github-stats --user $(whoami)'
alias stl='systemctl'

alias open='xdg-open'
alias chrome='google-chrome'
alias store='ubuntu-software'
alias update='sudo apt-get update;sudo apt-get upgrade;sudo apt-get autoremove'

# commands
alias path='echo ${PATH} | sed -e "s|:|\n|g"'
alias xrld='source ~/.xprofile'

# cd
alias ..='cd ..'
alias ...='cd ../../'
alias ....=' cd ../../../'
alias .....='cd ../../../../'
alias -- -='cd -'  # Type '-' to go to previous dir.

# pip
alias pip='pip3'
alias pif='pip freeze'
alias pin='pip install'
alias pun='pip uninstall'

# django
alias djsa='django-admin startapp'
alias djch='django-admin check'
alias djdb='django-admin dbshell'
alias djm='django-admin migrate'
alias djmm='django-admin makemigrations'
alias djr='django-admin runserver'
alias djsh='django-admin shell'
alias djsu='django-admin createsuperuser'
alias djt='django-admin test'

# git
alias ga='git add'
alias gaa='git add --all'
alias gb='git branch'
alias gc='git commit'
alias gca='git commit --amend'
alias gcl='git clone'
alias gco='git checkout'
alias gd='git diff'
alias gl='git log'
alias gm='git merge'
alias gmv='git mv'
alias gp='git push'
alias gpf='git push --force'
alias gpl='git pull'
alias grb='git rebase -i'
alias grl='git rev-list --count HEAD'
alias grs='git reset'
alias grv='git revert'
alias gs='git status'

# ls
alias ls='ls -vh --color=auto --group-directories-first'
alias la='ls -A'
alias lal='ls -Al'
alias lh='ls -d .*'
alias ll='ls -l'
alias lr='ls -r'

# exa
alias exa='exa --icons --group-directories-first -I "__pycache__|plugged|node_modules"'
alias ea='exa -a'
alias el='exa -l'
alias et='exa -T'

# tree
alias tree='tree -C -I .git'
alias ta='tree -a'
alias td='tree -d'
alias tl='tree -a -L 2'

# files
alias cp='cp -iv'
alias du='du -h'
alias mv='mv -iv'
alias mkdir='mkdir -pv'
alias rmdir='rmdir -v'
alias rm='rm -vi --preserve-root '
alias rr='rm -rfi'

# config
alias diff='diff -y --suppress-common-lines --color=auto'
alias grep='grep --color=auto'
alias tmux='tmux -f ${XDG_CONFIG_HOME}/tmux/tmux.conf'
alias wget='wget --hsts-file=${XDG_CACHE_HOME}/wget-hsts'

# windows
alias cls='clear'
alias copy='cp'
alias edit='nvim'
alias move='mv'
alias rename='mv'

# sudo
alias smv='sudo mv'
alias smkdir='sudo mkdir'
alias snv='sudo nvim'
alias snvim='sudo nvim'
alias srm='sudo rm'
alias srmdir='sudo rmdir'

# version
alias ipython='ipython3'
alias python='python3'

# fun
alias starwars='telnet towel.blinkenlights.nl'

# dirs
alias api='cd ~/dev/repos/work/api'
alias web='cd ~/dev/repos/work/web'
alias cfg='cd ~/dev/repos/work/cfg'

# wsl
if [ -n "${WSL_DISTRO_NAME}" ]; then
    alias calc='calc.exe'
    alias cmd='cmd.exe'
    alias explorer='explorer.exe'
    alias notepad='notepad.exe'
    alias powershell='powershell.exe'
    alias write='write.exe'
    alias chrome='${WIN_PROG_FILES_86}/Google/Chrome/Application/chrome.exe'
fi
