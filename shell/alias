#!/bin/sh

# File:      shell/alias
# Purpose:   Define shortcuts for commands and add default arguments.
# Notes:     This file is sourced by .zshrc and .bashrc accordingly.

# Created:   30.12.2019
# Author:    Artyom Danilov
# Caution:   Order is important, some aliases can and will break if you change it


# Allow running sudo with aliases.
alias sudo='sudo '

# cd {{{
alias \
    ..='cd ..' \
    ...='cd ../../' \
    ....=' cd ../../../' \
    .....='cd ../../../../' \
    cd..='cd ..' \
    cd-='cd -'   \
    cd~='cd ~'   \
    CD='cd'

# Type '-' to go to previous dir.
alias -- -='cd -'
#}}}

# cat {{{
alias \
    nc='cat -n' \
    cc='highlight --out-format=ansi'
#}}}

# diff {{{
alias \
    diff='diff -y --suppress-common-lines' \
    diff='diff --color=auto'
#}}}

# dir {{{
alias \
    dir='dir --color=auto'  \
    vdir='vdir --color=auto'
#}}}

# exa {{{
alias \
    ex='exa --icons --group-directories-first --git-ignore' \
    e='ex -1'  \
    ea='ex -a' \
    el='ex -l' \
    er='ex -R' \
    et='ex -T'
#}}}

# grep{{{
alias \
    grep='grep --color=auto'   \
    fgrep='fgrep --color=auto' \
    egrep='egrep --color=auto'
#}}}

# ls {{{
alias \
    ls='ls -vhF --color=never --group-directories-first' \
    l='  ls -1'    \
    la=' ls -A'    \
    lh=' ls -d .*' \
    ll=' ls -l'    \
    lr=' ls -r'    \
    lal='ls -Al'   \
    LS=ls
#}}}

# tree {{{
alias \
    tree='tree -I .git' \
    ta='tree -a'        \
    td='tree -d'
#}}}

# Default options.
alias \
    cp='cp -iv'                            \
    du='du -h'                             \
    mv='mv -iv'                            \
    rm='rm -vI --preserve-root '           \
    mkdir='mkdir -pv'                      \
    rmdir='rmdir -pv'                      \

# Options (rm).
alias rr='rm -rfI'

# Shortcuts (one-letter).
alias \
    f='file'    \
    g='git'     \
    h='history' \
    n='ls -A | wc -l' \
    p='pwd'     \
    s='source'  \
    t='tree'    \
    v='vim'

# Shortcuts (two-letter).
alias \
    gh='history | grep' \
    py='python3'        \
    sc='shellcheck'     \
    tc='touch'          \
    vi='vim'

# Shortcuts (three-letter).
alias \
    clr='clear'   \
    mkd='mkdir'   \
    rmd='rmdir'   \
    shu='shunit2'

# Shortcuts (other).
alias chrome='google-chrome'

# Sudo.
alias \
    scp='sudo cp'        \
    smv='sudo mv'        \
    srm='sudo rm'        \
    svim='sudo vim'      \
    smkdir='sudo mkdir'  \
    srmdir='sudo rmdir'  \
    reboot='sudo reboot' \
    shutdown='sudo shutdown'

# Windows cmd {{{
alias \
    edit='vim'  \
    del='rm'    \
    cls='clear' \
    copy='cp'   \
    move='mv'   \
    rename='mv'
#}}}

# Curls {{{
alias \
    corona='curl https://corona-stats.online'            \
    coronaru='curl "https://corona-stats.online/Russia"' \
    starwars='telnet towel.blinkenlights.nl'             \
    weather='curl http://wttr.in/'

#}}}

# Version conflicts {{{
alias \
    pip='pip3'       \
    pylint='pylint3' \
    python='python3'

#}}}

# Config/History files locations {{{
alias \
    wget='wget --hsts-file=${XDG_CACHE_HOME}/wget-hsts' \
    tmux='tmux -f ${XDG_CONFIG_HOME}/tmux/tmux.conf'
#}}}

# Print time (e.g. 13:29:43)
alias now='date +\"%T\"'
# List every dir in PATH on a separate line.
alias path='echo ${PATH} | sed -e "s|:|\n|g"'
# Open application store.
alias store='ubuntu-software'
# Fast way to update packages.
alias update='sudo apt-get update;sudo apt-get upgrade;sudo apt-get autoremove'
