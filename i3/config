# SETTINGS.

# Variables {{{
set $mod Mod4
floating_modifier $mod

# Workspaces
set $ws1 "1 Term üåä"
set $ws2 "2 Web üåê"
set $ws3 "3 Code ‚ö°"
set $ws4 "4 Code üî•"
set $ws5 "5 Remote üåü"
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9

# Applications
set $terminal alacritty
set $browser  google-chrome

# Monitors
set $in_monitor eDP-1
set $ex_monitor HDMI-1

# Gaps
set $inner_gaps 10
set $outer_gaps 5

set $resize 5
#}}}

# Startup {{{
exec --no-startup-id i3-msg "workspace $ws1; exec $terminal"
exec --no-startup-id i3-msg "workspace $ws2; exec $browser"

# Enable terminal transparency.
exec --no-startup-id xcompmgr -cfn

# All windows here are floating.
for_window [workspace=$ws4] floating enable
# }}}

# Colors {{{

# class                 border  backgr. text    indicator child_border
client.focused          #000066 #1b2323 #ffffff #2e9ef4   #000066
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #ffffff
#}}}

# Windows {{{

# Window title allignment
title_align center

# Window title font
font pango:DejaVu Sans Mono 10

# Workspace orientation
default_orientation horizontal

# Workspace switching
workspace_auto_back_and_forth yes

# Gaps
gaps inner $inner_gaps
gaps outer $outer_gaps
#}}}

# Status bar {{{
bar {
    position bottom
    status_command ~/.local/bin/bumblebee-status  \
            -m memory disk weather sun            \
               amixer battery layout-xkb          \
               date time uptime                   \
            -p date.format="%a %x"                \
            # -t gruvbox
}
#}}}

# BINDS.

# Applications {{{
bindsym $mod+w        exec --no-startup-id $browser
bindsym $mod+d        exec --no-startup-id dmenu_run
bindsym $mod+Return   exec --no-startup-id $terminal
bindsym $mod+Shift+t  exec --no-startup-id teamviewer
bindsym $mod+Shift+a  exec --no-startup-id anydesk
#}}}

# Gaps {{{

# Set default.
bindsym $mod+0        gaps inner current set $inner_gaps; \
                      gaps outer current set $outer_gaps
# Remove.
bindsym $mod+Shift+0  gaps inner current set 0; gaps outer current set 0

# Increase|Decrease.
bindsym $mod+plus     gaps outer current plus 5
bindsym $mod+minus    gaps outer current minus 5
#}}}

# Kill|Reload|Restart {{{
bindsym $mod+Shift+q kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
# }}}

# Layout {{{
bindsym $mod+f  fullscreen toggle
bindsym $mod+t  split toggle

bindsym $mod+space        focus mode_toggle
bindsym $mod+Shift+space  floating toggle
#}}}

# Monitors {{{
bindsym $mod+bracketleft        exec --no-startup-id "xrandr --output $in_monitor --auto"
bindsym $mod+Shift+bracketleft  exec --no-startup-id "xrandr --output $in_monitor --off"
bindsym $mod+bracketright       exec --no-startup-id "xrandr --output $ex_monitor --auto"
bindsym $mod+Shift+bracketright exec --no-startup-id "xrandr --output $ex_monitor --off"
#}}}

# Movement {{{

# Change window.
bindsym $mod+h  focus left
bindsym $mod+j  focus down
bindsym $mod+k  focus up
bindsym $mod+l  focus right

# Move window.
bindsym $mod+Shift+h  move left
bindsym $mod+Shift+j  move down
bindsym $mod+Shift+k  move up
bindsym $mod+Shift+l  move right

# Resize window.
bindsym $mod+y  resize shrink width $resize px or $resize ppt
bindsym $mod+u  resize grow   height $resize px or $resize ppt
bindsym $mod+i  resize shrink height $resize px or $resize ppt
bindsym $mod+o  resize grow   width $resize px or $resize ppt

# Switch workspace (number keys).
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

# Switch workspace (numpad keys).
bindsym $mod+KP_End   workspace $ws1
bindsym $mod+KP_Down  workspace $ws2
bindsym $mod+KP_Next  workspace $ws3
bindsym $mod+KP_Left  workspace $ws4
bindsym $mod+KP_Begin workspace $ws5
bindsym $mod+KP_Right workspace $ws6
bindsym $mod+KP_Home  workspace $ws7
bindsym $mod+KP_Up    workspace $ws8
bindsym $mod+KP_Prior workspace $ws9

# Move window to workspace (number keys).
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9

# Move window to workspace (numpad keys).
bindsym $mod+Shift+KP_End   move container to workspace $ws1
bindsym $mod+Shift+KP_Down  move container to workspace $ws2
bindsym $mod+Shift+KP_Next  move container to workspace $ws3
bindsym $mod+Shift+KP_Left  move container to workspace $ws4
bindsym $mod+Shift+KP_Begin move container to workspace $ws5
bindsym $mod+Shift+KP_Right move container to workspace $ws6
bindsym $mod+Shift+KP_Home  move container to workspace $ws7
bindsym $mod+Shift+KP_Up    move container to workspace $ws8
bindsym $mod+Shift+KP_Prior move container to workspace $ws9
#}}}

# Shutdown Menu {{{
set $Locker i3lock && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Escape mode "$mode_system"
# }}}

# Sound {{{
bindsym F1  exec "amixer -D pulse set Master 1+ toggle"
bindsym F2  exec "amixer -q set Master 5%-"
bindsym F3  exec "amixer -q set Master 5%+"
#}}}

# Scratchpad {{{
bindsym $mod+s move scratchpad
bindsym $mod+Shift+s scratchpad show
#}}}
