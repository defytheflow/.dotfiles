
# File:      config
# Purpose:   i3 settings

# Created:   22.03.2020
# Author:    Artyom Danilov

# Variables
# ------------------------------------------------------------------------------
set $mod Mod1
floating_modifier $mod

set $ws1 "1 Term"
set $ws2 "2 Web"
set $ws3 "3 Code Tile"
set $ws4 "4 Code Float"
set $ws5 "5 Remote"
set $ws6 "6 Music"
set $ws7 7
set $ws8 8
set $ws9 9

set $terminal 'gnome-terminal'
set $browser 'google-chrome'

set $in_monitor eDP-1
set $ex_monitor HDMI-1

set $inner_gaps 10
set $outer_gaps 5

# Startup
# ------------------------------------------------------------------------------
exec --no-startup-id i3-msg 'workspace $ws1; exec $terminal'
exec --no-startup-id i3-msg 'workspace $ws2; exec $browser'
exec --no-startup-id clipit

# ALl windows here are floating
for_window [workspace=$ws4] floating enable

# Hardcoded with xprop for my java app.
for_window [class="seabattle-App"] floating enable

# Enable terminal transparency.
exec_always --no-startup-id xcompmgr -c -f -n

# Enable russian keyboard (switch on CapsLock).
exec_always --no-startup-id setxkbmap -layout us,ru -option grp:caps_toggle

# Settings
# ------------------------------------------------------------------------------

# Windows {{{
title_align center                       # Window title allignment
font pango:DejaVu Sans Mono 10           # Window title font
default_orientation horizontal           # Workspace orientation
# focus_follows_mouse no
workspace_auto_back_and_forth yes
#}}}

# Gaps {{{
gaps inner $inner_gaps
gaps outer $outer_gaps
#}}}

# Status bar {{{
bar {
    position bottom
    status_command ~/.local/bin/bumblebee-status  \
         -m cpu memory disk brightness weather datetime amixer battery \
         -t iceberg
}
#}}}

# Bindings
# ------------------------------------------------------------------------------

# The middle button over a titlebar kills the window
# bindsym --release button2 kill

# The middle button and a modifer over any part of the window kills the window
# bindsym --border $mod+button1 move left
# bindsym --whole-window $mod+button3 move right


# Sound {{{
bindsym F1  exec amixer -D pulse set Master 1+ toggle
bindsym F2  exec amixer -q set Master 5%-
bindsym F3  exec amixer -q set Master 5%+
#}}}

# Monitors {{{
bindsym $mod+bracketleft        exec --no-startup-id "xrandr --output $in_monitor --auto"
bindsym $mod+Shift+bracketleft  exec --no-startup-id "xrandr --output $in_monitor --off"

bindsym $mod+bracketright        exec --no-startup-id "xrandr --output $ex_monitor --auto"
bindsym $mod+Shift+bracketright  exec --no-startup-id "xrandr --output $ex_monitor --off"
#}}}

# Apps {{{
bindsym $mod+w        exec --no-startup-id $browser
bindsym $mod+d        exec --no-startup-id dmenu_run
bindsym $mod+r        exec --no-startup-id $terminal -e ranger
bindsym $mod+Return   exec --no-startup-id $terminal
bindsym $mod+Shift+t  exec --no-startup-id teamviewer
bindsym $mod+Shift+a  exec --no-startup-id anydesk
#}}}

# Kill|Reload|Restart {{{
bindsym $mod+Shift+q kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
# }}}

# Layout {{{
bindsym $mod+f  fullscreen toggle
bindsym $mod+t  split  toggle

# bindsym $mod+Shift+s layout toggle split
# bindsym $mod+Shift+t layout tabbed

bindsym $mod+space        focus mode_toggle
bindsym $mod+Shift+space  floating toggle
#}}}

# Gaps {{{
# ------------------------------------------------------------------------------
# Set default.
bindsym $mod+0        gaps inner current set $inner_gaps; \
                      gaps outer current set $outer_gaps
# Remove.
bindsym $mod+Shift+0  gaps inner current set 0; gaps outer current set 0

# Increase|Decrease.
bindsym $mod+plus     gaps outer current plus 5
bindsym $mod+minus    gaps outer current minus 5
#}}}

# Movement {{{
# ------------------------------------------------------------------------------
# Change window.
bindsym $mod+h  focus left
bindsym $mod+j  focus down
bindsym $mod+k  focus up
bindsym $mod+l  focus right

# Move window.
bindsym $mod+Shift+h  move left
bindsym $mod+Shift+j  move down
bindsym $mod+Shift+k  move up
bindsym $mod+Shift+l  move right

# Resize window.
bindsym $mod+y  resize shrink width 1 px or 1 ppt
bindsym $mod+u  resize grow   height 1 px or 1 ppt
bindsym $mod+i  resize shrink height 1 px or 1 ppt
bindsym $mod+o  resize grow   width 1 px or 1 ppt

# Switch workspace.
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

bindsym $mod+KP_End   workspace $ws1
bindsym $mod+KP_Down  workspace $ws2
bindsym $mod+KP_Next  workspace $ws3
bindsym $mod+KP_Left  workspace $ws4
bindsym $mod+KP_Begin workspace $ws5
bindsym $mod+KP_Right workspace $ws6
bindsym $mod+KP_Home  workspace $ws7
bindsym $mod+KP_Up    workspace $ws8
bindsym $mod+KP_Prior workspace $ws9

# Move window to workspace.
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9

bindsym $mod+Shift+KP_End   move container to workspace $ws1
bindsym $mod+Shift+KP_Down  move container to workspace $ws2
bindsym $mod+Shift+KP_Next  move container to workspace $ws3
bindsym $mod+Shift+KP_Left  move container to workspace $ws4
bindsym $mod+Shift+KP_Begin move container to workspace $ws5
bindsym $mod+Shift+KP_Right move container to workspace $ws6
bindsym $mod+Shift+KP_Home  move container to workspace $ws7
bindsym $mod+Shift+KP_Up    move container to workspace $ws8
bindsym $mod+Shift+KP_Prior move container to workspace $ws9
#}}}

# Shutdown Menu {{{
set $Locker i3lock && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Escape mode "$mode_system"
# }}}

