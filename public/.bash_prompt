# COLORS
black="\[\033[1;30m\]"
red="\[\033[1;31m\]"
green="\[\033[1;32m\]"
yellow="\[\033[1;33m\]"
blue="\[\033[1;34m\]"
magenta="\[\033[1;35m\]"
cyan="\[\033[1;36m\]"
white="\[\033[1;37m\]"
no_color="\[\033[00m\]"

# SMILEYS
smiley="$green:)$no_color"
frowny="$red:($no_color"
select="if [[ \$? -eq 0 ]]; then echo \"$smiley\"; else echo \"$frowny\"; fi"

# CUSTOM
PS1="$yellow\u@\h$white at $yellow\W \`${select}\` $no_color\$ "

# DEFAULT
#PS1="$green\u@\h$no_color:$blue\w$no_color\$ "
