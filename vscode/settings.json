{
  "keyboard.dispatch": "keyCode",

  "window.zoomLevel": -2,

  "editor.detectIndentation": true,
  "editor.fontSize": 15,
  "editor.folding": true,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "relative",
  "editor.renderWhitespace": "all",
  "editor.rulers": [90],
  "editor.tabCompletion": "on",

  "workbench.iconTheme": "Monokai Pro (Filter Octagon) Icons",
  "workbench.colorTheme": "Monokai Pro (Filter Octagon)",
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#333"
  },

  "[json]": {
    "editor.tabSize": 2
  },

  "files.exclude": {
    "**/.git": true,
    "**/.venv/**": true
  },

  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pydocstyleEnabled": false,
  "python.linting.pylintEnabled": false,
  "python.linting.ignorePatterns": [
      "**/test*.py",
      "**/site-packages/**/*.py"
  ],
  "python.formatting.provider": "yapf",

  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },

  "[cpp]": {
    "editor.formatOnSave": true
  },

  "vim.leader": "\\",
  "vim.camelCaseMotion.enable": true,
  "vim.replaceWithRegister": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [">"], "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"], "commands": ["editor.action.outdentLines"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["Y"], "after": ["y", "$"]
    },
    {
      "before": ["<C-l>"], "commands": [":nohl"]
    },
    {
      "before": ["Z", "Z"], "commands": [":wq"]
    },
    {
      "before": ["<Space>"], "after": ["z", "a"]
    },
    {
      "before": ["<tab>"], "after": ["g", "t"]
    },
    {
      "before": ["<leader>", "<tab>"], "after": ["g", "T"]
    },
    {
      "before": ["leader", "r"], "commands": ["workbench.action.reloadWindow"]
    },
    {
      "before": ["leader", "p"], "commands": ["workbench.action.showCommands"]
    }
  ]
}
