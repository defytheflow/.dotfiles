{
  "keyboard.dispatch": "keyCode",

  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.cursorSmoothCaretAnimation": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": true,
  "editor.fontFamily": "Monaco, Menlo, 'Courier New', monospace",
  "editor.fontLigatures": false,
  "editor.fontSize": 14,
  "editor.folding": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "relative",
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [90],
  "editor.smoothScrolling": true,
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",
  "editor.wordWrap": "on",

  "window.menuBarVisibility": "toggle",
  "window.zoomLevel": -1,

  "workbench.panel.defaultLocation": "right",
  "workbench.colorTheme": "Night Owl",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#333"
  },
  "workbench.editorAssociations": [
    {
      "viewType": "jupyter.notebook.ipynb",
      "filenamePattern": "*.ipynb"
    }
  ],

  "terminal.integrated.fontSize": 14,
  "terminal.integrated.commandsToSkipShell": ["-workbench.action.terminal.focusFind"],

  "files.associations": {
    ".env": "shellscript",
    "Pipfile": "toml"
  },

  "files.exclude": {
    "**/.git/**": true,
    "**/.venv/**": false,
    "**/*cache*/**": true,
    "**/*coverage*/**": true
  },

  "files.trimTrailingWhitespace": true,

  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pydocstyleEnabled": false,
  "python.linting.pylintEnabled": false,
  "python.linting.ignorePatterns": ["**/site-packages/**/*.py"],
  "python.formatting.provider": "yapf",

  "typescript.updateImportsOnFileMove.enabled": "always",

  "vim.leader": "\\",
  "vim.textwidth": 90,
  "vim.camelCaseMotion.enable": true,
  "vim.replaceWithRegister": true,
  "vim.sneak": true,
  "vim.surround": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.visualstar": true,
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": ["J"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.moveLinesUpAction"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["N"],
      "after": ["N", "z", "z"]
    },
    {
      "before": ["n"],
      "after": ["n", "z", "z"]
    },
    {
      "before": ["Y"],
      "after": ["y", "$"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["<Tab>"],
      "after": ["g", "t"]
    },
    {
      "before": ["<Enter>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<C-a>"],
      "commands": ["workbench.action.toggleActivityBarVisibility"]
    },
    {
      "before": ["<C-c>"],
      "after": ["<Esc>"]
    },
    {
      "before": ["<C-l>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<C-m>"],
      "commands": ["editor.action.toggleMinimap"]
    },
    {
      "before": ["<C-n>"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "<Tab>"],
      "after": ["g", "T"]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["editor.action.changeAll"]
    },
    {
      "before": ["<leader>", "z"],
      "commands": ["workbench.action.toggleCenteredLayout"]
    },
    {
      "before": ["<leader>", "v", "e"],
      "commands": ["workbench.action.openSettingsJson"]
    },
    {
      "before": ["g", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["g", "s"],
      "commands": ["references-view.find"]
    },
    {
      "before": ["]", "<space>"],
      "commands": ["editor.action.insertLineAfter"]
    },
    {
      "before": ["[", "<space>"],
      "commands": ["editor.action.insertLineBefore"]
    },
    {
      "before": ["]", "b"],
      "after": ["g", "t"]
    },
    {
      "before": ["[", "b"],
      "after": ["g", "T"]
    },
    {
      "before": ["[", "c"],
      "commands": ["workbench.action.editor.nextChange"]
    },
    {
      "before": ["]", "c"],
      "commands": ["workbench.action.editor.previousChange"]
    },
    {
      "before": ["[", "d"],
      "commands": [":bd"]
    },
    {
      "before": ["]", "d"],
      "commands": [":bd"]
    },
    {
      "before": ["[", "g"],
      "commands": ["editor.action.marker.next", "closeMarkersNavigation"]
    },
    {
      "before": ["]", "g"],
      "commands": ["editor.action.marker.prev", "closeMarkersNavigation"]
    }
  ],

  "tabnine.experimentalAutoImports": true,

  "todo-tree.regex.regexCaseSensitive": false,
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO", "XXX", "[ ]", "[x]"],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "background": "#00b248",
      "foreground": "#66ffa6",
      "type": "text"
    },
    "FIXME": {
      "background": "#c79400",
      "foreground": "#fff64f",
      "type": "text"
    },
    "BUG": {
      "background": "#ff0033",
      "foreground": "#f1f1f1",
      "type": "text"
    },
    "HACK": {
      "background": "#3943b7",
      "foreground": "#78f0e0",
      "type": "text"
    }
  },

  "cSpell.ignoreRegExpList": [
    "asgi",
    "dotenv",
    "isort",
    "isdigit",
    "noqa",
    "pipenv",
    "psql",
    "pytest",
    "redux",
    "stylelint",
    "yapf",
    "yasg",
    "zfill",
    "ipdb"
  ],

  "gitlens.advanced.messages": {
    "suppressImproperWorkspaceCasingWarning": true
  }
}
