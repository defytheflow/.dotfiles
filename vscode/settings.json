{
  "keyboard.dispatch": "keyCode",
  "terminal.integrated.fontSize": 14,

  "editor.detectIndentation": true,
  "editor.fontSize": 14,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.folding": true,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.rulers": [90],
  "editor.tabCompletion": "on",

  "window.zoomLevel": -1,
  "window.menuBarVisibility": "toggle",

  "workbench.activityBar.visible": true,
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#333"
  },

  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git/**": true,
    "**/.venv/**": false,
    "**/*cache*/**": true,
    "**/*coverage*/**": true
  },

  "[css]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[html]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },

  "[typescript]": {
    "editor.tabSize": 2
  },

  "[typescriptreact]": {
    "editor.tabSize": 2
  },

  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pydocstyleEnabled": false,
  "python.linting.pylintEnabled": false,
  "python.linting.ignorePatterns": ["**/site-packages/**/*.py"],
  "python.formatting.provider": "yapf",

  "typescript.updateImportsOnFileMove.enabled": "always",

  "vim.leader": "\\",
  "vim.textwidth": 90,

  "vim.camelCaseMotion.enable": true,
  "vim.replaceWithRegister": true,
  "vim.sneak": true,
  "vim.surround": true,

  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.visualstar": true,

  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }
  ],

  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["K"],
      "after": ["g", "h"]
    },
    {
      "before": ["Y"],
      "after": ["y", "$"]
    },
    {
      "before": ["<tab>"],
      "after": ["g", "t"]
    },
    {
      "before": ["<leader>", "<tab>"],
      "after": ["g", "T"]
    },
    {
      "before": ["C-c"],
      "after": ["<Esc>"]
    },
    {
      "before": ["<C-l>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<C-n>"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "r"],
      "commands": ["workbench.action.reloadWindow"]
    },
    {
      "before": ["<leader>", "a"],
      "commands": ["workbench.action.toggleActivityBarVisibility"]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["editor.action.changeAll"]
    },
    {
      "before": ["<leader>", "z"],
      "commands": ["workbench.action.toggleCenteredLayout"]
    },
    {
      "before": ["g", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["g", "s"],
      "commands": ["references-view.find"]
    },
    {
      "before": ["]", "<space>"],
      "commands": ["editor.action.insertLineAfter"]
    },
    {
      "before": ["[", "<space>"],
      "commands": ["editor.action.insertLineBefore"]
    },
    {
      "before": ["[", "g"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["]", "g"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["[", "c"],
      "commands": ["workbench.action.editor.nextChange"]
    },
    {
      "before": ["]", "c"],
      "commands": ["workbench.action.editor.previousChange"]
    }
  ],
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
