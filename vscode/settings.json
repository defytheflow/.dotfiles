{
  "keyboard.dispatch": "keyCode",

  "window.zoomLevel": -1,

  "editor.detectIndentation": true,
  "editor.fontSize": 14,
  "editor.folding": true,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "relative",
  "editor.renderWhitespace": "all",
  "editor.rulers": [90],
  "editor.tabCompletion": "on",
  "editor.minimap.enabled": false,

  "workbench.activityBar.visible": true,
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#333"
  },

  "terminal.integrated.fontSize": 14,

  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true,
    "**/htmlcov/**": true,
    "**/.coverage/**": true
  },

  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pydocstyleEnabled": false,
  "python.linting.pylintEnabled": false,
  "python.linting.ignorePatterns": ["**/site-packages/**/*.py"],
  "python.formatting.provider": "yapf",

  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },

  "[c]": {
    "editor.formatOnSave": true
  },

  "[cpp]": {
    "editor.formatOnSave": true
  },

  "[json]": {
    "editor.tabSize": 2
  },

  "vim.leader": "\\",
  "vim.textwidth": 90,

  "vim.camelCaseMotion.enable": true,
  "vim.replaceWithRegister": true,
  "vim.sneak": true,
  "vim.surround": true,

  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.visualstar": true,

  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }
  ],

  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["K"],
      "after": ["g", "h"]
    },
    {
      "before": ["Y"],
      "after": ["y", "$"]
    },
    {
      "before": ["<C-l>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<tab>"],
      "after": ["g", "t"]
    },
    {
      "before": ["<leader>", "<tab>"],
      "after": ["g", "T"]
    },
    {
      "before": ["<leader>", "r"],
      "commands": ["workbench.action.reloadWindow"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["g", "s"],
      "commands": ["references-view.find"]
    },
    {
      "before": ["]", "<space>"],
      "commands": ["editor.action.insertLineAfter"]
    },
    {
      "before": ["[", "<space>"],
      "commands": ["editor.action.insertLineBefore"]
    },
    {
      "before": ["[", "g"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["]", "g"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["[", "c"],
      "commands": ["workbench.action.editor.nextChange"]
    },
    {
      "before": ["]", "c"],
      "commands": ["workbench.action.editor.previousChange"]
    }
  ]
}
