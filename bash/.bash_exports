#!/bin/bash

# Author: Artyom Danilov
# Modified: March 6, 2020.

# Default Text-Editor
export EDITOR=vim;

# Configuration files
export BA="$HOME/.bash_aliases"
export BRC="$HOME/.bashrc"
export VRC="$HOME/.vimrc"
export BE="$HOME/.bash_exports"
export BF="$HOME/.bash_functions"
export BP="$HOME/.bash_prompt"

# Current git projects
export GIT="$HOME/dev/git"
export SC="$HOME/dev/git/school"
export SDK="$HOME/dev/git/sdk"
export DOT="$HOME/dev/git/dotfiles"

# Python
export PYTHONPATH="$HOME/.lib/"            # my modules
export PYTHONSTARTUP="$HOME/.pythonrc.py"  # "run command" file

# C
export CFLAGS="-W -Wall -Wextra"          # default flags for make
export CPATH="$HOME/.lib/"                 # my includes
export LD_LIBRARY_PATH="$HOME/.lib"        # my libraries (.so, .a)
