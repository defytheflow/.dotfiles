#!/bin/bash

# File:      bash/env
# Purpose:   Define bash-specific environment variables
# Created:   26.03.2020
# Modified:  28.03.2020
# Author:    Artyom Danilov


# History settings.
export HISTCONTROL='ignoredups'
export HISTFILE="${XDG_CACHE_HOME}"/bash/history
export HISTSIZE=10000
export HISTFILESIZE=10000

# Config files.
export ALIAS="${HOME}"/.dotfiles/bash/alias
export ENV="${HOME}"/.dotfiles/bash/env
export FUNCTION="${HOME}"/.dotfiles/bash/function
export MYPROMPT="${HOME}"/.dotfiles/bash/prompt
