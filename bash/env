#!/bin/bash

# File:      bash/env
# Purpose:   Define bash-specific environment variables
# Created:   26.03.2020
# Modified:  28.03.2020
# Author:    Artyom Danilov


# History settings.
export HISTCONTROL='ignoredups'
export HISTFILE="${XDG_CACHE_HOME}"/bash/history
export HISTSIZE=10000
export HISTFILESIZE=10000

# Config files.
export ALIAS="${DOTFILES_HOME}"/bash/alias
export ENV="${DOTFILES_HOME}"/bash/env
export FUNCTION="${DOTFILES_HOME}"/bash/function
export MYPROMPT="${DOTFILES_HOME}"/bash/prompt
