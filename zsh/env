#!/usr/bin/zsh

# ------------------------------------------------------------------------------
# | File:      zsh/env
# ------------------------------------------------------------------------------
# | Purpose:   define zsh-specific environment variables
# ------------------------------------------------------------------------------
# | Modified:  March 24, 2020
# ------------------------------------------------------------------------------
# | Author:    Artyom Danilov
# ------------------------------------------------------------------------------

# History settings.
export HISTCONTROL='ignoredups'
export HISTSIZE=10000
export HISTFILESIZE=10000

# Config files.
export ZSHRC="${HOME}/.dotfiles/zsh/rc"
export ALIAS="${HOME}/.dotfiles/zsh/alias"
export ENV="${HOME}/.dotfiles/zsh/env"
export FUNCTION="${HOME}/.dotfiles/zsh/function"
export MYPROMPT="${HOME}/.dotfiles/zsh/prompt"

# Plugins are here.
export ZSHPLUG="${HOME}/.dotfiles/zsh/plugins"
