#!/usr/bin/zsh

# File:      zsh/env
# Purpose:   Define zsh-specific environment variables
# Created:   26.03.2020
# Modified:  28.03.2020
# Author:    Artyom Danilov


# History settings.
export HISTFILE="${XDG_CACHE_HOME}"/zsh/history
export HISTSIZE=10000
export SAVEHIST=10000

# Config files.
export ALIAS="${DOTFILES_HOME}"/zsh/alias
export ENV="${DOTFILES_HOME}"/zsh/env
export FUNCTION="${DOTFILES_HOME}"/zsh/function
export MYPROMPT="${DOTFILES_HOME}"/zsh/prompt
