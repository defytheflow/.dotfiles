# unbold prompt.
() {
  local z=$'\0'
  PROMPT='${${${$(spaceship_prompt)//\%\%/'${z}'}//\%B}//'${z}'/%%}'
}

# remove newlines.
SPACESHIP_PROMPT_ADD_NEWLINE=false
SPACESHIP_PROMPT_SEPARATE_LINE=false

# char.
SPACESHIP_CHAR_PREFIX=''
SPACESHIP_CHAR_SYMBOL='$'
SPACESHIP_CHAR_SUFFIX=' '

# directory.
SPACESHIP_DIR_SHOW=true
SPACESHIP_DIR_TRUNC_REPO=true
SPACESHIP_DIR_COLOR=135  # <-- purple.
SPACESHIP_DIR_PREFIX='in '
SPACESHIP_DIR_TRUNC=0  # <-- show all folders in cwd.

# git.
SPACESHIP_GIT_SHOW=true
SPACESHIP_GIT_PREFIX=''

# git-branch.
SPACESHIP_GIT_BRANCH_SHOW=true
SPACESHIP_GIT_BRANCH_COLOR=45  # <-- cyan.

# git-status.
SPACESHIP_GIT_STATUS_SHOW=true
SPACESHIP_GIT_STATUS_PREFIX=' ('
SPACESHIP_GIT_STATUS_SUFFIX=')'
SPACESHIP_GIT_STATUS_COLOR=220  # <-- yellow.

# exec-time.
SPACESHIP_EXEC_TIME_SHOW=true
SPACESHIP_EXEC_TIME_COLOR=202  # <-- orange.

# python-venv.
SPACESHIP_VENV_SHOW=true
SPACESHIP_PYENV_SHOW=true

# vi-mode.
SPACESHIP_VI_MODE_SHOW=false

# exit-code.
SPACESHIP_EXIT_CODE_SHOW=true
SPACESHIP_EXIT_CODE_SYMBOL=
SPACESHIP_EXIT_CODE_COLOR=196  # <-- bright red.

# unused.
SPACESHIP_HG_SHOW=false
SPACESHIP_PACKAGE_SHOW=false
SPACESHIP_NODE_SHOW=false
SPACESHIP_RUBY_SHOW=false
SPACESHIP_ELM_SHOW=false
