#!/bin/sh

# File:         install
# Created:      12.09.2020
# Author:       Artyom Danilov (@defytheflow)

. "$(dirname "${0}")/.profile"
. "$(dirname "${0}")/mods/utils"

main() {
  check_distro
  check_environ
  check_internet

  printf 'install: Update system? [y/n] ' && read -r ans
  [ "${ans}" = 'y' ] && update_system

  install_packages
  install_pip_packages
  install_npm_packages
  [ -z "${WSL_DISTRO_NAME}" ] && install_cargo_packages

  create_dirs
  symlink_dirs
  symlink_files
}

check_distro() {
  log 'Checking distribution.'

  distro=$(lsb_release -d)

  case "${distro}" in
    *Manjaro*)
      . "$(dirname "${0}")/mods/arch"
      ;;
    *Ubuntu*)
      . "$(dirname "${0}")/mods/debian"
      ;;
    *)
      log "Distribution '${distro}' is not supported."
      return 1
      ;;
  esac
}

check_environ() {
  log 'Checking evironment variables.'

  if [ -z "${DOTFILES_HOME}" ]; then
    log 'DOTFILES_HOME environment variable has not been set.'
    return 1
  fi
}

check_internet() {
  log 'Checking internet connection.'

  if ! wget -q --spider https://google.com; then
    log 'no internet connection.'
    return 1
  fi
}

install_pip_packages() {
  log 'Installing pip packages.'

  set -- \
    flake8 flake8-quotes \
    httpie \
    ipdb ipython isort \
    mypy \
    pipenv pynvim python-language-server pytest \
    vim-vint \
    yapf

  for package; do
    log "Checking that $(color "${package}") exists."
    python3 -m pip list | grep "${package}" >/dev/null || python3 -m pip install "${package}"
  done
}

install_npm_packages() {
  log 'Installing npm packages.'

  set -- \
    bash-language-server \
    create-react-app \
    prettier neovim \
    typescript \
    vim-language-server

  for package; do
    log "Checking that $(color "${package}") exists."
    npm list -g "${package}" >/dev/null || yes | sudo npm install -g "${package}"
  done
}

install_cargo_packages() {
  log 'Installing cargo packages.'

  set -- exa
  for package; do
    log "Checking that $(color "${package}") exists."
    command -v "${package}" >/dev/null || cargo install "${package}"
  done
}

create_dirs() {
  log 'Creating directories.'

  create_dir() {
    log "Creating $(color "${1}") directory."
    [ -d "${1}" ] || mkdir -p "${1}"
  }

  create_dir "${HOME}/.local/bin"
  create_dir "${XDG_CONFIG_HOME}/yapf"

  for prog in 'bash' 'less' 'postgres' 'python' 'zsh'; do
    create_dir "${XDG_CACHE_HOME}/${prog}"
  done
}

symlink_dirs() {
  log 'Symlinking directories.'

  if command -v code >/dev/null; then
    command -v code-oss >/dev/null && dest='Code - OSS/User' || dest='Code/User'
    dsymlink "${DOTFILES_HOME}/vscode" "${XDG_CONFIG_HOME}/${dest}"
  fi

  if [ "${USER}" = 'defytheflow' ]; then
    dsymlink "${DOTFILES_HOME}/git" "${XDG_CONFIG_HOME}/git"
  fi

  for dir in 'i3' 'nvim' 'python' 'tmux'; do
    dsymlink "${DOTFILES_HOME}/${dir}" "${XDG_CONFIG_HOME}/${dir}"
  done

  dsymlink "${DOTFILES_HOME}/shell/zsh" "${ZDOTDIR}"
  dsymlink "${DOTFILES_HOME}/term/alacritty" "${XDG_CONFIG_HOME}/alacritty"
}

symlink_files() {
  log 'Symlinking files.'

  if command -v ipython >/dev/null; then
    dest="${DOTFILES_HOME}/python/ipython_config.py"
    src="${IPYTHONDIR}/profile_default/ipython_config.py"
    fsymlink "${dest}" "${src}"
  fi

  fsymlink "${DOTFILES_HOME}/python/style.yapf" "${XDG_CONFIG_HOME}/yapf/style"
  fsymlink "${DOTFILES_HOME}/user-dirs.dirs" "${XDG_CONFIG_HOME}/user-dirs.dirs"

  for file in 'flake8' 'pycodestyle'; do
    fsymlink "${DOTFILES_HOME}/python/${file}" "${XDG_CONFIG_HOME}/${file}"
  done

  fsymlink "${DOTFILES_HOME}/typescript/.prettierrc" "${HOME}/.prettierrc"
  fsymlink "${DOTFILES_HOME}/shell/bash/.bashrc" "${HOME}/.bashrc"
  fsymlink "${DOTFILES_HOME}/clang/.clang-format" "${HOME}/.clang-format"

  for file in '.inputrc' '.profile' '.xprofile' '.zprofile'; do
    fsymlink "${DOTFILES_HOME}/${file}" "${HOME}/${file}"
  done
}

main
